
@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<body>
    <div>
        <h4>@Html.Sitecore().Field("BlogId", new { DisableWebEdit = true })</h4>
        <h4>@Html.Sitecore().Field("posteddate", new { format = "yyyy-MMM-dd" })</h4>
        <h4>@Html.Sitecore().Field("ArticleLargeImage", new { w = 1110, h = 751 })</h4>
        <h4>@Html.Sitecore().Field("LongDescription")</h4>
    </div>

</body>
<script src="~/assets/js/jquery-3.3.1.slim.min.js"></script>
<script src="~/assets/js/bootstrap.bundle.js"></script>
<link href="~/assets/css/blogsite.css" rel="stylesheet" />
